<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Dialog 
		icon="sap-icon://accept" 
		title="Ingrese una constante"
		state="Success">
		<content>
			<f:Form editable="true" binding="{/constante}">
				<f:formContainers>
					<f:FormContainer
						expanded="true">
						<f:formElements>
							<f:FormElement>
								<f:fields>
									<Input 
										value="{nombre}" 
										required="true" 
										change="onValidarNombreConstante"
										valueState="{/valueStateNombre}"
										valueStateText="{/valueStateTextNombre}"/>
								</f:fields>
								<f:label>
									<Label text="Nombre" />
								</f:label>
							</f:FormElement>
							<f:FormElement>
								<f:fields>
									<Input 
										value="{valor}" 
										required="true"
										change="onValidarValorConstante"
										valueState="{/valueStatevalor}"
										valueStateText="{/valueStateTextValor}"/>
								</f:fields>
								<f:label>
									<Label text="Valor" />
								</f:label>
							</f:FormElement>
							<f:FormElement>
								<f:fields>
									<Input 
										value="{descripcion}" 
										required="true"
										change="onValidarDescripcionConstante"
										valueState="{/valueStateDescripcion}"
										valueStateText="{/valueStateTextDescripcion}"/>
								</f:fields>
								<f:label>
									<Label text="DescripciÃ³n" />
								</f:label>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
				<f:layout>
					<f:ColumnLayout
						columnsL="2"
						columnsM="1"
						columnsXL="2"
						emptyCellsLarge="0"
						labelCellsLarge="4"
					/>
				</f:layout>
			</f:Form>
		</content>
		<endButton>
			<Button
				text="Agregar"
				type="Emphasized"
				press="onAgregarConstante" />
		</endButton>	
    </Dialog>
</core:FragmentDefinition>